<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment"
    android:id="@+id/rootLayout">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:iconifiedByDefault="false"
                    app:searchIcon="@null"
                    android:hint="Search for pictures"
                    app:hideNavigationIcon="true"
                    app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
                    android:visibility="gone"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15sp">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:singleLine="true">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="All"
                            android:checked="true"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBackgrounds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Backgrounds"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFashion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Fashion">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Nature">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipScience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Science">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEducation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Education">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFeelings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Feelings">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHealth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Health">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="People">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipReligion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Religion">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Places">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAnimals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Animals">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipIndustry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Industry">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipComputer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Computer">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Food">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Sports">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTransportation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Transportation">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Travel">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBuildings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Buildings">

                        </com.google.android.material.chip.Chip>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBusiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Business">

                        </com.google.android.material.chip.Chip>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="Music">

                        </com.google.android.material.chip.Chip>
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/rvListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_picture">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/topAppBarLayout">
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/baseline_dehaze_24"
                app:navigationIconTint="@android:color/white"
                app:title="Wallily"
                android:id="@+id/toolBarLayout"
                app:menu="@menu/home_app_bar_menu">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/header_navigation_drawer">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>